# TikTok Transcription Pipeline Environment Variables
# Copy this file to .env and configure as needed

# Output Configuration
OUTPUT_DIR=accounts
TEMP_DIR=/tmp/tiktok_transcriber

# Model Configuration
WHISPER_MODEL_SIZE=small  # Options: tiny, small, medium, large
MAX_VIDEOS=10             # Maximum videos to process per account

# Speech Detection
MIN_SPEECH_THRESHOLD=50   # Minimum characters to consider video has speech

# Logging
LOG_LEVEL=INFO
LOG_FILE=tiktok_transcriber.log

# Optional: Path to cookies.txt for authenticated scraping
# COOKIES_FILE=cookies.txt